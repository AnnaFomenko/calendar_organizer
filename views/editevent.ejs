<%layout('/layout/page');%>
<%block('title', title);%>

<div class="col-lg-offset-2 col-lg-10">
    <div class="col-lg-offset-2 col-lg-10">
        <a href="<%-back%>">BACK</a>

    </div>
    <center>
        <div class="col-lg-offset-2 col-lg-10">
            <form class="form-horizontal event-form" name="event-form" action="<%-action%>" method="POST" name="event-form">
                <div class="form-group">
                    <label for="input-eventname" class="col-lg-2 control-label">Title</label>

                    <div class="col-lg-10">
                        <input name="title" value="<%=event.getTitle()%>" type="text" class="form-control" id="input-title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="input-eventdesc" class="col-lg-2 control-label">Description</label>

                    <div class="col-lg-10">
                        <input name="description" value="<%=event.getDescription()%>" type="text" class="form-control" id="input-desc" >
                    </div>
                </div>
                <div class="form-group">
                <label class="btn btn-primary active">
                    <input type="checkbox" name="allday"  autocomplete="off"> All-day
                </label>
                </div>
                <div class="form-group">
                    <label for="input-start" class="col-lg-2 control-label">Starts</label>

                    <div class="col-lg-2">
                        <input name="starthh" value="<%-event.getHours()%>" type="number"  min="0" max="24"  id="input-start-hh" >
                        :
                        <input name="startmm" value="<%-event.getMinutes()%>" type="number"  min="0" max="59"  id="input-start-mm" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="input-end" class="col-lg-2 control-label">Ends</label>

                    <div class="col-lg-2">
                        <input name="endhh" value="<%-event.getEndHours()%>" type="number"  min="0" max="24"  id="input-end-hh" >
                        :
                        <input name="endmm" value="<%-event.getEndMinutes()%>" type="number"  min="0" max="59"  id="input-end-mm" >
                    </div>
                </div>
                <input type='hidden' name='id' value="<%-event.getId()%>"/>
                <input type='hidden' name='year' value="<%-event.getFullYear()%>" />
                <input type='hidden' name='month' value="<%-event.getMonth()%>" />
                <input type='hidden' name='date' value="<%-event.getDate()%>"/>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary" data-loading-text="Saving..." value="">Save</button>
                        <span class="help-block error"></span>
                    </div>
                </div>
            </form>
            <form action="/delevent" method="post">
                <button name="delete" class="btn btn-primary" value="<%=JSON.stringify(event)%>">Delete</button>
            </form>
        </div>
    </center>
</div>

