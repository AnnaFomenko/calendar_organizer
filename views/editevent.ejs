<%layout('/layout/page');%>
<%block('title', title);%>

<div class="col-lg-offset-2 col-lg-10">
    <div class="col-lg-offset-2 col-lg-10">
        <a href="/day/<%-back%>"></a>

    </div>
    <center>
        <div class="col-lg-offset-2 col-lg-10">
            <form class="form-horizontal event-form" name="event-form" action="" method="POST" name="event-form">
                <div class="form-group">
                    <label for="input-eventname" class="col-lg-2 control-label"><%=event.title%></label>

                    <div class="col-lg-10">
                        <input name="title" value="Title" type="text" class="form-control" id="input-title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="input-eventdesc" class="col-lg-2 control-label"><%=event.description%></label>

                    <div class="col-lg-10">
                        <input name="eventdesc" value="Description" type="text" class="form-control" id="input-desc" >
                    </div>
                </div>
                <div class="form-group">
                <label class="btn btn-primary active">
                    <input type="checkbox" checked autocomplete="off"> All-day
                </label>
                </div>
                <div class="form-group">
                    <label for="input-start" class="col-lg-2 control-label">Starts</label>

                    <div class="col-lg-2">
                        <input name="starthh" value="00" type="number"  min="0" max="24"  id="input-start-hh" >
                        :
                        <input name="startmm" value="00" type="number"  min="0" max="59"  id="input-start-mm" >
                    </div>
                </div>
                <div class="form-group">
                    <label for="input-end" class="col-lg-2 control-label">Ends</label>

                    <div class="col-lg-2">
                        <input name="endhh" value="00" type="number"  min="0" max="24"  id="input-end-hh" >
                        :
                        <input name="endmm" value="00" type="number"  min="0" max="59"  id="input-end-mm" >
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" class="btn btn-primary" data-loading-text="Saving...">Save</button>
                        <button type="button" class="btn btn-primary" data-loading-text="Deleting..." onclick="">Delete</button>
                        <span class="help-block error"></span>
                    </div>
                </div>
            </form>
            <script>
                $(document.forms['event-form']).on('submit', function() {
                    var form = $(this);
                    $('.error', form).html('');
                    $(":submit", form).button("loading");

                    $.ajax({
                        url: "/event",
                        data: form.serialize(),
                        method: "POST",
                        complete: function() {
                            $(":submit", form).button("reset");
                        },
                        statusCode: {
                            200: function() {
                                form.html("Event was saved successfully.").addClass('alert-success');
                                window.location.href = "/calendar";
                            },
                            403: function(jqXHR) {
                                var error = JSON.parse(jqXHR.responseText);
                                $('.error', form).html(error.message);
                            }
                        }
                    });
                    return false;
                });
            </script>
        </div>
    </center>
</div>

